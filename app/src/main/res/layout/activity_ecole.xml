<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleurconnection"
    android:orientation="vertical"
    tools:context=".Ecole">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Quelle école va utiliser cette application?"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/txtidecole"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:textSize="15dp"
            android:hint="ID école"
            android:background="@drawable/zonetexte"
            android:drawableLeft="@drawable/cle"
            android:inputType="text"/>

        <EditText
            android:id="@+id/txtdenomecole"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:textSize="15dp"
            android:hint="Nom école"
            android:background="@drawable/zonetexte"
            android:drawableLeft="@drawable/ic_baseline_ecole"
            android:inputType="text"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/txtdirecteur"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:textSize="15dp"
            android:hint="nom du directeur"
            android:background="@drawable/zonetexte"
            android:drawableLeft="@drawable/titulaire"
            android:inputType="text"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnecole"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boouton_connection"
            android:text="Sauvegarder"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_baseline_publish_24"
            android:textColor="@android:color/white"
            android:layout_marginStart="95dp"
            android:layout_marginTop="7dp"

            />

    </LinearLayout>



</ScrollView>
</RelativeLayout>